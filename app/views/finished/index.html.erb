<p id="notice"><%= notice %></p>

<h1>Finished</h1>
<div class="row">
	<div class="col-xs-6">
		<div class="table">

			<table class="table table-hover">
				<thead>
					<tr>
						<th colspan="1">Title</th>
						<th colspan="1">Difficulty</th>
						<th colspan="1">Actions</th>
					</tr>
				</thead>

				<tbody>
					<% @finished_qs.each do |finished| %>
						<tr>
							<td><%= finished.name %></td>
							<td><%= finished.difficulty %></td>
							<td><div class="row"><div class="col-md-12"><%= link_to  finished, class: "btn btn-default" do %>
										<span class="glyphicon glyphicon-file"></span>
									<% end %>
									<%= link_to finished, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default" do %>
										<span class="glyphicon glyphicon-trash"></span>
									<% end %></div></div>
							</td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
	<div class="col-xs-2"></div>
	<div class="col-xs-4" style="border-left:solid 1px black">
		<%= render "users/show" %>
	</div>
</div>

